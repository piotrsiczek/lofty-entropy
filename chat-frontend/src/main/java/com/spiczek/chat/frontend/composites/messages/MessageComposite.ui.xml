<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:w="urn:import:com.spiczek.chat.frontend.composites.widgets"
             xmlns:ww="urn:import:com.spiczek.chat.frontend.composites.messages">


    <ui:style>
        .mainMessagePane {
            float: left;
            width: 30%;
            display: block;
            margin: 0 2% 2% 0;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .content-pane {
            background-color: rgb(236, 236, 236);
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .title-panel {
            background-color: rgb(236, 236, 236);
            width:100%;
            text-align: right;
            margin-bottom: 10px;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .leftMessage {
            background-color: rgb(0, 72, 121);
            width: 70%;
            float: left;
            text-align: left;
            margin-top: 3%;
            margin-left: 3%;
            color: rgba(247, 247, 247, 0.86);
            padding: 3%;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }
        .rightMessage {
            background-color: rgba(71, 82, 107, 0.79);
            width: 70%;
            float: right;
            text-align: right;
            margin-top: 3%;
            margin-right: 3%;
            padding: 3%;
            color: rgba(247, 247, 247, 0.86);
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }
        .rightMessageContainer {
            text-align: right;
        }
        .messageImage {
            width: 30%;
            height: auto;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .messageSender {
            margin-left: 2%;
            margin-right: 2%;
            font-style: italic;
            font-size: 80%;
            color: rgba(218, 218, 218, 0.72);
        }

        .messageTime {
            margin-left: 2%;
            margin-right: 2%;
            font-style: italic;
            font-size: 80%;
            color: #999;
        }

        .messageContent {
            line-height: 17px;
        }

        .messageTest {
            width: 94%;
            margin-left: 2%;
        }

        .sendButton {
            margin: 0 0 0 auto;
        }

        .textPanel {
            width: 100%;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.mainMessagePane}" ui:field="mainPanel">
            <g:HTMLPanel styleName="{style.title-panel}">
                <g:Button ui:field="closeButton" text="x" />
            </g:HTMLPanel>
            <g:HTMLPanel styleName="{style.content-pane}">
                <ww:MessagePanel ui:field="messagePanel" />
                <g:HorizontalPanel styleName="{style.textPanel}">
                    <w:TextBox styleName="{style.messageTest}" ui:field="messageText" />
                    <g:Button styleName="{style.sendButton}" ui:field="sendButton" text="WyÅ›lij" />
                </g:HorizontalPanel>
            </g:HTMLPanel>
    </g:HTMLPanel>
</ui:UiBinder>