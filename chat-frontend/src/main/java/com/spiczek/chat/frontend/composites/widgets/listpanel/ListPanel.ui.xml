<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:style>
        .title-panel {
            text-align: right;
        }
        .scrollable-list {
            height:400px;
            overflow:hidden;
            overflow-y:scroll;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .main-panel {
            width: 98%;
            float: left;
            display: block;
            margin: 1%;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.main-panel}">
        <g:HTMLPanel styleName="{style.title-panel}" ui:field="titlePanel" />
        <g:HTMLPanel styleName="{style.scrollable-list}" ui:field="scrollablePanel" />
    </g:HTMLPanel>
</ui:UiBinder>