<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:s="urn:import:com.spiczek.chat.frontend.composites.panels">

    <ui:style>
        .mainPanel {
            width: 200px;
            background-color: rgb(49, 57, 72);
            color: rgb(180, 188, 203);
            display: block;
            vertical-align: middle;
            height: 60px;
            padding: 1% 1%;
            margin-top: 1px;
        }

        .textPanel {
            width: 80%;
            float: left;
            background-color: green;
            cursor: default;
            color: white;
        }

    </ui:style>

    <g:HTMLPanel styleName="{style.mainPanel}">
        <s:ClickablePanel ui:field="talkPanel" styleName="{style.textPanel}" />
    </g:HTMLPanel>

</ui:UiBinder>