<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
        xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:g="urn:import:com.google.gwt.user.client.ui"
        xmlns:w="urn:import:com.spiczek.chat.frontend.composites.widgets">

    <ui:style>
        .friendToolBar {
            background-color: rgb(49, 57, 72);
            color: rgb(180, 188, 203);
            width: 100%;
            margin-bottom: 10px;
            border-radius: 5px;
            -moz-border-radius: 5px;
            -webkit-border-radius: 5px;
        }

        .rightAlign {
            width: 100%;
            text-align: right;
            /*background-color: orange;*/
        }

        .errorLabel {
            color: red;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.friendToolBar}">
        <g:VerticalPanel>
            <g:HTMLPanel styleName="{style.rightAlign}">
                <g:Button text="+" ui:field="openAddPanelButton" />
            </g:HTMLPanel>
            <g:HTMLPanel ui:field="addFriendPanel">
                <w:TextBox ui:field="friendLoginText" />
                <g:Button text="Dodaj" ui:field="addFriendButton" />
            </g:HTMLPanel>
            <g:Label ui:field="errorLabel" styleName="{style.errorLabel}"/>
        </g:VerticalPanel>
    </g:HTMLPanel>

</ui:UiBinder>